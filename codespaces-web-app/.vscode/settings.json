{
    "editor.formatOnSave": true,
    "typescript.tsdk": "node_modules/typescript/lib",
    "files.autoSave": "onWindowChange",
    "eslint.enable": true,
    "prettier.requireConfig": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "files.exclude": {
        "**/.git": true,
        "**/.DS_Store": true,
        "**/node_modules": true
    },
    "search.exclude": {
        "**/node_modules": true,
        "**/.git": true
    }
}